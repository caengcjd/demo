@model Pager<T_CurrencyChange>

@{
    ViewBag.Title = "NavigationTop.Financial.CurrencyChangeRecord".ToLocal();
}

@Html.Tab(new ListItem {  Value="/vip/financial/CurrencyChange",Text="NavigationTop.Financial.CurrencyChange".ToLocal()},
new ListItem {  Value="/vip/financial/CurrencyChangeRecord",Text="NavigationTop.Financial.CurrencyChangeRecord".ToLocal(),Selected=true})

@(Grid.Create<T_CurrencyChange>().SetDataSource(Model.Data)
.Column(m => m.FromCurrencyId).Name(Resources.CurrencyChange_FromCurrency).Value(m => CurrencyHandler.Element(m.FromCurrencyId).Name).End()
