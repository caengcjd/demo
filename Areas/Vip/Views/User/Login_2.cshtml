@model UserLoginData
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=0.5, maximum-scale=1">
    <link href="/Content/Site.css?timespan=@DateTime.Now.ToOADate()" rel="stylesheet" type="text/css" />
    <!-- bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <!-- WARNING: Respond.js doesn't work if you view the page via  -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/html5shiv.min.js")"></script>
      <script src="@Url.Content("~/Scripts/respond.min.js")"></script>
    <![endif]-->

    <!-- alertify -->
    <link href="/Content/alertify/alertify.core.css" rel="stylesheet" />
    <link href="/Content/alertify/alertify.bootstrap.css" rel="stylesheet" />

    <style type="text/css">
        body {
            font-family: 'Tahoma';
            margin: 0px auto;
            padding: 0px;
            background: url(/Theme/Login/2/loginbg.jpg) no-repeat top center;
        }
    </style>
</head>

<body>

    <form method="post" action="/vip/user/login">
        <div style="background: url(/Theme/Login/2/loginbox1.png) no-repeat; width: 800px; height: 503px; margin: 8% auto; position: relative;">
            <div style="padding-left: 110px; padding-top: 80px; color: #FFF;">会员登录</div>
            <div style="width: 100%; text-align: center; padding-top: 30px; font-size: 32px; color: #f8ec04; font-family: '微软雅黑'; letter-spacing: 2px;">
                @(Config.Instance.Single.UserHomeTitle)
            </div>
            <div style="width: 392px; height: 176px; margin: 15px auto; background: url(/Theme/Login/2/loginbox2.png) no-repeat;">
                <div style="padding-left: 126px; padding-top: 23px;">
                    @(Html.TextBoxFor(m => m.UserCode, new { @style = "width:140px; height:23px;padding:0px;border:none;background:none;" }))
                </div>
                <div style="padding-left: 126px; padding-top: 10px;">
                    @(Html.PasswordFor(m => m.Password, new { @style = "width:140px; height:23px;padding:0px;border:none;background:none;" }))
                </div>
                <div style="padding-left: 126px; padding-top: 11px;">
                    @(Html.PasswordFor(m => m.Captcha, new { @style = "width:60px; height:23px;padding:0px;border:none;background:none;" }))
                    <img id="__captcha" src="/system/Captcha?timestamp=@DateTime.Now.ToFileTime()" style="height:21px;margin-top:1px;vertical-align:top;margin-left:20px;" />
                    <input id="shuaxin" type="button" style="float: right; margin-right: 95px; background: none; border: none; padding: 0px 10px;" />
                </div>
                <div style="margin-top: 11px; width: 100%; height: 35px; overflow: hidden;">
                    <div style="float: left; width: 90px; padding-top: 6px; padding-left: 50px;">
                        <input type="checkbox" />
                    </div>
                    <div id="ok" style="float: left; width: 95px; height: 35px; line-height: 30px; color: #cecfd1; text-align: center; font-size: 12px; cursor: pointer;">
                        登录
                    </div>
                    <div id="findpwd" style="float: left; width: 80px; height: 35px; line-height: 30px; color: #cecfd1; font-size: 12px; cursor: pointer; text-align: center;">
                        找回密码
                    </div>
                </div>
            </div>
            @*<div style="position: absolute; width: 250px; top: 200px; left: 50px; letter-spacing: 1px;">
                <p style="font-size: 12px; color: #f8ec04; font-family: '微软雅黑';">
                    @(Config.Instance.Single.UserHomeTitle) 由南洋第6代华人
                    Benjamin先生2015年发起成立,Benjamin先
                    生一直在关注,学习,参与近几年的虚拟货币，虚
                    拟积分,用了2年多的时间研发、现推出革命性的
                    模式：”K分（K分交易系统）”是继SMI,MBI
                    后、的虚拟积分第三个模式创新的平台！
                </p>
                <p style="font-size: 12px; color: #f8ec04; font-family: '微软雅黑'; padding-top: 20px;">
                    @(Config.Instance.Single.UserHomeTitle) 不是投资公司，
                     更不是股票、证券，是参与帮助解决全球人口
                     老龄化的一个平台，让老年人“快乐健康”的
                     生活的同时，也让大家学会理财！因此告知一
                     下几种朋友，请你不要进来！
                </p>
            </div>*@
            <div style="width: 500px; margin: 0px auto; letter-spacing: 1px; overflow: auto; padding-left: 50px;">
                <p style="font-size: 12px; color: #f8ec04; font-family: '微软雅黑'; margin-bottom: 5px;">
                    1、好赌、好赌的朋友，请你不要进来！
                </p>
                <p style="font-size: 12px; color: #f8ec04; font-family: '微软雅黑'; margin-bottom: 5px;">
                    2、把@(Config.Instance.Single.UserHomeTitle)当成传销，想一夜暴富的朋友，请你不要进来！
                </p>
                <p style="font-size: 12px; color: #f8ec04; font-family: '微软雅黑'; margin-bottom: 5px;">
                    3、没有1千美金的闲钱，靠借贷生活的朋友，请你不要进来！
                </p>
                <p style="font-size: 12px; color: #f8ec04; font-family: '微软雅黑'; margin-bottom: 5px;">
                    4、钱离开超过一年以上不能正常生活的朋友，请你不要进来！
                </p>
                <p style="font-size: 12px; color: #f8ec04; font-family: '微软雅黑'; margin-bottom: 5px;">
                    5、没有长期理财观念，又不肯学习尝试的朋友，请你不要进来！
                </p>
            </div>
        </div>
    </form>

    <!--引入bootstrap-->
    <script type="text/javascript" src="/Scripts/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Scripts/json2.min.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="/Scripts/alertify/alertify.min.js"></script>
    <script type="text/javascript" src="/Scripts/localization.js"></script>
    <script type="text/javascript" src="/Scripts/common.js"></script>
</body>
</html>

<script type="text/javascript">
    $(function () {
        $("#ok").click(function () {
            $(this).parents("form").submit();
        });
        $("#findpwd").click(function () {
            window.location = "/vip/user/Forget_Email";
        });
        $("#shuaxin").click(function () {
            $("#__captcha").prop("src", "/system/Captcha?timestamp=" + common.getTimestamp());
        });

    });
    @if (TempData[AlertEntity.ALERT_ENTITY] != null)
    {
        <text>alert('@((TempData[AlertEntity.ALERT_ENTITY] as AlertEntity).Message)')</text>
    }
</script>
