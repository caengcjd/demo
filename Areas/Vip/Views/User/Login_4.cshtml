@model UserLoginData
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>登录</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="/Content/Site.css?timespan=@DateTime.Now.ToOADate()" rel="stylesheet" type="text/css" />
    <!-- bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <!-- WARNING: Respond.js doesn't work if you view the page via  -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/html5shiv.min.js")"></script>
      <script src="@Url.Content("~/Scripts/respond.min.js")"></script>
    <![endif]-->

    <!-- alertify -->
    <link href="/Content/alertify/alertify.core.css" rel="stylesheet" />
    <link href="/Content/alertify/alertify.bootstrap.css" rel="stylesheet" />

    <!--[if IE 6]>
<style type="text/css">
html{overflow:hidden}
body{height:100%;overflow:auto}
.login_div{position:absolute}
</style>
<![endif]-->
    <style type="text/css">
        html, body {
            width: 100%;
            height: 100%;
            position: relative;
        }
    </style>
</head>
<body>
    <div style="width: 100%; height: 100%; text-align: center;">
        <img src="/Theme/Login/4/loginbg3.jpg" class="bg123" style="height: 100%; position: relative; z-index: 1; margin: 0px auto;" />
        <img src="/Theme/Login/4/loginbg1.jpg" class="bg123" style="height: 100%; position: relative; z-index: 1; display: none;" />
        <img src="/Theme/Login/4/loginbg.jpg" class="bg123" style="height: 100%; position: relative; z-index: 1; display: none;" />
        <img src="/Theme/Login/4/loginbg2.jpg" class="bg123" style="height: 100%; position: relative; z-index: 1; display: none;" />
    </div>
    <div style="position: absolute; top: 0px; bottom: 0px; left: 0px; right: 0px; z-index: 999;">
        <div style="position: absolute; right: 20%; top: 0px; z-index: 999;">
            <a href="/system/SetCulture?culture=zh-CN&returnUrl=@Server.UrlEncode(Html.GenerateUrl())" style="padding: 10px 20px; border: solid 1px #FFF; border-right: none; float: left; text-align:center;">
                <img src="/images/gj1.jpg" /><br />
                简体中文
            </a>
            <a href="/system/SetCulture?culture=ja&returnUrl=@Server.UrlEncode(Html.GenerateUrl())" style="padding: 10px  20px; border: solid 1px #FFF; border-right: none; float: left; text-align: center;">
                <img src="/images/gj2.jpg" /><br />
                日语
            </a>
            <a href="/system/SetCulture?culture=zh-Hant&returnUrl=@Server.UrlEncode(Html.GenerateUrl())" style="padding: 10px  20px; border: solid 1px #FFF; border-right: none; float: left;">
                <img src="/images/gj3.jpg" /><br />
                繁体中文
            </a>
            <a href="/system/SetCulture?culture=kok&returnUrl=@Server.UrlEncode(Html.GenerateUrl())" style="padding: 10px  20px; border: solid 1px #FFF; border-right: none; float: left; text-align: center;">
                <img src="/images/gj4.jpg" /><br />
                韩语
            </a>
            <a href="/system/SetCulture?culture=en-US&returnUrl=@Server.UrlEncode(Html.GenerateUrl())" style="padding: 10px  20px; border: solid 1px #FFF; border-right: none; float: left;">
                <img src="/images/gj5.jpg" /><br />
                英语
            </a>
            <a href="/system/SetCulture?culture=ru&returnUrl=@Server.UrlEncode(Html.GenerateUrl())" style="padding: 10px  20px; border: solid 1px #FFF; border-right: none; float: left; text-align: center;">
                <img src="/images/gj6.jpg" /><br />
                俄语
            </a>
        </div>
        <div style="width: 600px; margin: 10% auto; height: 400px; overflow: hidden;">
            <div style="width: 100%; text-align: center;">
                <img src="/Theme/Login/4/loginTitle.png" />
            </div>
            <div style="width: 100%; margin-top: 50px; padding: 10px; background: url(/Theme/Login/4/loginboxbg.png) repeat; height: 100%;">
                <form method="post" action="/vip/user/login">
                    <div class="row">
                        <div class="col-xs-5" style="text-align: center; padding: 20px;">
                            @Html.TextBoxFor(m => m.UserCode, new { @style = "height:30px;" })
                        </div>
                        <div class="col-xs-2" style="padding-top: 10px;">
                            <img src="/Theme/Login/4/logo.png" style="width: 100%;" />
                        </div>
                        <div class="col-xs-5" style="text-align: center; padding: 20px;">
                            @Html.PasswordFor(m => m.Password, new { @style = "height:30px;" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3"></div>
                        <div class="col-xs-6" style="text-align: center; padding-top: 15px; position: relative;">
                            @Html.TextBoxFor(m => m.Captcha, new { @style = "width:220px; height:30px;" })
                            <img id="__captcha" style="position:absolute;z-index:999; right:43px;height:30px;" src="/system/Captcha?timestamp=@DateTime.Now.ToFileTime()" />
                        </div>
                        <div class="col-xs-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3"></div>
                        <div class="col-xs-6" style="text-align: center; padding-top: 10px;">
                            <a href="/vip/user/Forget_Email" style="color: rgb(245,169,22); font-size: 12px;">@("忘记密码".ToLocal())?</a>
                        </div>
                        <div class="col-xs-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3"></div>
                        <div class="col-xs-6" style="text-align: center; padding-top: 10px;">
                            <input type="submit" style="background: #7597be; border: none; color: #FFF; padding: 5px 25px; border-radius: 8px;" value="@("登录".ToLocal())" />
                        </div>
                        <div class="col-xs-3"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

<!--引入bootstrap-->
<script type="text/javascript" src="/Scripts/jquery-1.9.1.min.js"></script>
<script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="/Scripts/json2.min.js"></script>
<script type="text/javascript" src="/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript" src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript" src="/Scripts/alertify/alertify.min.js"></script>
<script type="text/javascript" src="/Scripts/localization.js"></script>
<script type="text/javascript" src="/Scripts/common.js"></script>
<script type="text/JavaScript">
    var index = 0;
    function ToggleBG() {
        index += 1;
        $(".bg123").hide();
        $(".bg123").eq(index % 3).show();

    }
    $(function () {
        //setInterval(ToggleBG, 1000 * 5);
        $("#UserCode").val("@("会员帐号".ToLocal())").focus(function () {
            if ($(this).val() == "@("会员帐号".ToLocal())") { $(this).val(""); }
        }).blur(function () {
            if (!$(this).val()) { $(this).val("@("会员帐号".ToLocal())"); }
        });
        $("#Password").val("@("密码".ToLocal())").prop("type", "text").focus(function () {
            $(this).prop("type", "password");
            if ($(this).val() == "@("密码".ToLocal())") { $(this).val(""); }
        }).blur(function () {
            if (!$(this).val()) { $(this).val("@("密码".ToLocal())"); $(this).prop("type", "text"); }
        });
        $("#Captcha").val("@("验证码".ToLocal())").focus(function () {
            if ($(this).val() == "@("验证码".ToLocal())") { $(this).val(""); }
        }).blur(function () {
            if (!$(this).val()) { $(this).val("@("验证码".ToLocal())"); }
        });

        $("#__captcha").click(function () {
            $(this).prop("src", "/system/Captcha?timestamp=" + common.getTimestamp());
        });
                @if (TempData[AlertEntity.ALERT_ENTITY] != null)
                {
            <text>alert('@((TempData[AlertEntity.ALERT_ENTITY] as AlertEntity).Message)');</text> 
                }
    });
</script>
