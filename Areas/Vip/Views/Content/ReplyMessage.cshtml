@model ReplayMessageData
@{
    ViewBag.Title = "Content.Message.Reply".ToLocal();
}
<div style="padding: 20px;">
    @using (Html.Form())
    {
        @Html.Action("ReplyRecord", new { messageId = Model.MessageId, area = "" })
        @Html.HiddenFor(m => m.MessageId)
        <div class="form-group">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Submit(Resources.Submit, htmlAttributes: new { style = "margin-left:10px;margin-top:20px;" })
        </div>
    }
</div>
