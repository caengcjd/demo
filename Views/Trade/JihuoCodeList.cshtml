@model Pager<T_JihuoCode>
@{
    ViewBag.Title = "JihuoCodeList";
}

@Html.Tab(new ListItem { Text = "创建激活码".ToLocal(), Value = "/trade/CreateJihuoCode" },
new ListItem { Text = "转出激活码".ToLocal(), Value = "/trade/TransferCodeForAdmin" },
new ListItem { Text = "激活码列表".ToLocal(), Value = "/trade/JihuoCodeList", Selected = true }
)

@(Grid.Create<T_JihuoCode>().SetDataSource(Model.Data)
.Column(m => m.Code).Name("激活码").End()
.Column(m => m.BuyUserCode).Name("购买者").End()
.Column(m => m.BuyDate).Name("购买日期").End()
.Column(m => m.UseUserCode).Name("使用者").End()
.Column(m => m.UseDate).Name("使用日期").End()
.Column(m => m.CreateDate).Name("添加日期").End()
.Render())

@Html.Page(Model)