@model T_Message

<div class="page-header">
    <h3>@Model.MainTitle
    </h3>
    <h3>
        <small>@Model.SubTitle</small>
    </h3>
</div>
<div class="content">
    @foreach (var item in Model.MessageBody)
    {
        <div style="margin-top: 10px; padding: 5px;">
            <div style="color: #253340; margin-bottom: 10px;">
                <span style="display: inline-block; margin-right: 20px;">@item.CreateDate</span>
                <span style="display: inline-block;">
                    @(item.MemberType == MemberType.Sender ? Model.SenderDisplayName : Model.ReceiverDisplayName)
                </span>
            </div>
            <div>
                @item.Content
            </div>
        </div>
        <div style="border-top: 1px solid #CCC; margin: 20px 0px;"></div>
    }
</div>
